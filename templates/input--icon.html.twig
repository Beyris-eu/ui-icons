{#
/**
 * @file
 * Theme for an 'ui_icon_autocomplete' #type form element.
 *
 * Variables:
 * - iconset_id: The icon set id.
 * - icon_id: The icon id.
 * - icon_form: The icon input form.
 * - has_settings: Boolean flag if settings is enabled.
 * - settings_form: The icon settings form.
#}
{% apply spaceless %}

{{ attach_library('ui_icons/ui_icons.autocomplete') }}

<div class="ui-icons-wrapper">
  <div class="ui-icons-input-wrapper">
    <div class="ui-icons-preview form-item">
      {% if iconset_id and icon_id %}
        {{ icon(iconset_id, icon_id) }}
      {% endif %}
    </div>
    <div class="ui-icons-select">
      {{ icon_form }}
    </div>
  </div>

  {% if has_settings %}
    <div class="ui-icons-settings-wrapper {% if not icon_id %}hidden{% endif %}">
      {{ settings_form }}
    </div>
  {% endif %}
</div>
{% endapply %}
