{#
/**
 * @file
 * Theme for an 'ui_icon_autocomplete' #type form element.
 *
 * @todo preprocess to split element and get icon.
 */
#}
{% apply spaceless %}

{{ attach_library('ui_icons/ui_icons.autocomplete') }}
{# {{dump(element)}} #}
{% if element['#default_value'] %}
  {% set icon = element['#default_value']|split(':') %}
{% endif %}

<div class="ui-icons-wrapper">
  <div class="ui-icons-input-wrapper">
    <div class="ui-icons-preview form-item">
    {% if icon %}
    {# {{dump(icon)}} #}
      {{ icon(icon.0, icon.1) }}
    {% endif %}
    </div>
    <div class="ui-icons-select">
      {{ element.icon_id }}
    </div>
  </div>

  {% if element.icon_settings %}
    <div class="ui-icons-settings-wrapper {% if not icon %}hidden{% endif %}">
      {{ element.icon_settings }}
    </div>
  {% endif %}
</div>
{% endapply %}
